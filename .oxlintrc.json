{
	"rules": {
		"sort-imports": [
			"warn",
			{
				"allowSeparatedGroups": true,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": false,
				"ignoreCase": false
			}
		],
		"unicorn/require-post-message-target-origin": "off"
	},
	// Enable all rules in the `correctness` and `suspicious` categories
	"ignorePatterns": [
		"node_modules",
		"**/node_modules/**",
		"**/dist/**",
		"**/*.test.ts"
	],
	"categories": {
		"correctness": "error",
		"suspicious": "warn",
		"perf": "warn"
	}
}
