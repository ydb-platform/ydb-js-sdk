{
	"name": "ydbjs",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"third-party/*"
	],
	"scripts": {
		"build": "turbo run build",
		"attw": "turbo run attw",
		"lint": "oxlint",
		"test": "vitest run --project !e2e",
		"test:watch": "vitest --watch --project !e2e",
		"test:e2e": "vitest --run --project e2e",
		"test:e2e:watch": "vitest --watch --project e2e",
		"publish-packages": "turbo run clean build test attw && changeset version && changeset publish"
	},
	"dependencies": {
		"@types/node": "^22.15.30"
	},
	"devDependencies": {
		"oxlint": "^0.18.0",
		"prettier": "^3.5.3",
		"tsx": "^4.19.4",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3",
		"vitest": "^3.2.2",
		"zx": "^8.5.5"
	},
	"engineStrict": true,
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	},
	"overrides": {
		"@grpc/proto-loader": "npm:dry-uninstall"
	},
	"packageManager": "npm@11.3.0",
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.{md,yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
