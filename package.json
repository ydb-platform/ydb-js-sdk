{
	"name": "ydbjs",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"third-party/*"
	],
	"scripts": {
		"build": "turbo run build",
		"attw": "turbo run attw",
		"lint": "oxlint",
		"test": "vitest run --project uni",
		"test:uni": "vitest run --project uni",
		"test:int": "vitest run --project int",
		"test:e2e": "vitest run --project e2e",
		"test:all": "vitest run",
		"publish-packages": "turbo run test && turbo run clean build attw && changeset version && changeset publish"
	},
	"dependencies": {
		"@types/node": "^22.15.30"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"oxlint": "^1.3.0",
		"prettier": "^3.6.1",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"zx": "^8.6.0"
	},
	"engineStrict": true,
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	},
	"overrides": {
		"@grpc/proto-loader": "npm:dry-uninstall"
	},
	"packageManager": "npm@11.3.0",
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.{md,yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
