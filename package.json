{
	"name": "ydbjs",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"docs",
		"e2e/*",
		"examples/*",
		"packages/*",
		"third-parties/*"
	],
	"engines": {
		"node": ">=20.19.0",
		"npm": ">=10"
	},
	"engineStrict": true,
	"scripts": {
		"build": "turbo run build --output-logs=errors-only",
		"attw": "turbo run attw",
		"test": "vitest --run",
		"lint": "oxlint",
		"format": "prettier . --ignore-unknown --write",
		"version": "npx changeset version && npm install",
		"publish": "npx changeset publish",
		"prepare": "git config core.hooksPath scripts/hooks"
	},
	"dependencies": {
		"@types/node": "^24.10.0"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^4.0.7",
		"@vitest/ui": "^4.0.7",
		"oxlint": "^1.25.0",
		"prettier": "^3.7.4",
		"turbo": "^2.6.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.7",
		"zx": "^8.8.5"
	},
	"overrides": {
		"@grpc/proto-loader": "npm:dry-uninstall",
		"esbuild": "^0.25.0"
	},
	"packageManager": "npm@11.5.1",
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.{md,yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
