{
	"name": "ydbjs",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"test": "turbo run test",
		"attw": "turbo run attw"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.4",
		"@types/node": "^22.13.10",
		"oxlint": "^0.16.4",
		"prettier": "^3.5.3",
		"turbo": "^2.4.4",
		"typescript": "^5.8.3"
	},
	"engineStrict": true,
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"packageManager": "npm@11.2.0",
	"prettier": {
		"printWidth": 160,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.{md,yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
