{
	"name": "ydbjs",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"docs",
		"e2e/*",
		"examples/*",
		"packages/*",
		"third-party/*"
	],
	"engines": {
		"node": ">=20.19.0",
		"npm": ">=10"
	},
	"engineStrict": true,
	"scripts": {
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"build": "turbo run build --output-logs=errors-only",
		"attw": "turbo run attw",
		"lint": "oxlint --import-plugin --promise-plugin --vitest-plugin",
		"test": "vitest run --project uni",
		"test:uni": "vitest run --project uni",
		"test:int": "vitest run --project int",
		"test:e2e": "vitest run --project e2e",
		"test:all": "vitest run",
		"publish-packages": "turbo run clean build test attw && changeset version && changeset publish"
	},
	"dependencies": {
		"@types/node": "^24.0.7"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"oxlint": "^1.22.0",
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"zx": "^8.8.4"
	},
	"overrides": {
		"@grpc/proto-loader": "npm:dry-uninstall"
	},
	"packageManager": "npm@11.4.0",
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.{md,yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
